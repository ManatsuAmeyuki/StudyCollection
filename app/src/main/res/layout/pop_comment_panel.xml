<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="赚积分"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@color/blue_4286ED"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/edt"
        android:background="@drawable/bg_input"
        android:layout_margin="15dp"
        android:gravity="left|top"
        android:padding="10dp"
        android:hint="请输入"
        android:textColorHint="@color/blue_87C2FF"
        android:textColor="@color/blue_4CAEFD"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>


    <RadioGroup
        android:id="@+id/llStar"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbtn"
            android:background="@null"
            android:button="@drawable/selector_rbtn_star"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbtnSmall"
            android:background="@null"
            android:button="@drawable/selector_rbtn_star_small"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:text="提交"
        android:background="@drawable/login_btn_shape"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"/>
</LinearLayout>